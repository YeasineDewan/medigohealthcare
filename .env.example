# =============================================================================
# Medigo Healthcare - Unified Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment
# Run: cp .env.example .env  &&  php artisan key:generate
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME="Medigo Healthcare"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Dhaka

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug
LOG_DEPRECATIONS_CHANNEL=null

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=medigo_db
DB_USERNAME=root
DB_PASSWORD=

# -----------------------------------------------------------------------------
# Cache, Queue & Session
# -----------------------------------------------------------------------------
CACHE_STORE=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# -----------------------------------------------------------------------------
# Redis (optional)
# -----------------------------------------------------------------------------
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Laravel Sanctum (API Auth)
# -----------------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,localhost:5173,127.0.0.1,127.0.0.1:8000,::1
FRONTEND_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# Frontend (Vite)
# -----------------------------------------------------------------------------
# Development: leave empty to use Vite proxy (/api -> backend)
# Production: set to your API base URL (e.g. https://api.your-domain.com/api/v1)
VITE_API_URL=

# -----------------------------------------------------------------------------
# Mail (optional)
# -----------------------------------------------------------------------------
MAIL_MAILER=log
MAIL_FROM_ADDRESS=noreply@medigo.com
MAIL_FROM_NAME="${APP_NAME}"
